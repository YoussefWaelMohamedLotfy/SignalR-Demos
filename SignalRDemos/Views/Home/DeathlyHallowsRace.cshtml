@{
    ViewData["Title"] = "Deathly Hallows Race";
}

<div class="row border p-1">
    <h3>Deathly Hallow Race </h3>
    <div class="col-4">
        <div>Invisibility Cloak - <span id="cloakCounter"></span></div>

    </div>
    <div class="col-4">
        <div>Resurrection Stone - <span id="stoneCounter"></span></div>

    </div>
    <div class="col-4">
        <div>Elder Wand - <span id="wandCounter"></span></div>

    </div>
    <hr />
    <p>Vote:</p>
    <div class="btn-group btn-group-lg" role="group" aria-label="Vore Selections">
        <a asp-action="DeathlyHallows" asp-route-type="cloak" class="btn btn-outline-primary">Click here to vote for Invisibility Cloak</a>
        <a asp-action="DeathlyHallows" asp-route-type="stone" class="btn btn-outline-primary">Click here to vote for Resurrection Stone</a>
        <a asp-action="DeathlyHallows" asp-route-type="wand" class="btn btn-outline-primary">Click here to vote for Elder Wand</a>
    </div>
</div>

<script src="~/js/deathlyHallows.js"></script>